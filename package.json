{
  "name": "rts-game",
  "version": "1.0.0",
  "description": "RTS game",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pierre50/RTS-game.git"
  },
  "scripts": {
    "compile": "pnpm build && electron-builder",
    "start": "webpack serve",
    "deploy": "pnpm build && gh-pages -d build",
    "webpack": "webpack --mode development",
    "build": "webpack --mode production",
    "format": "find app -name '*.js' | xargs -I{} ./node_modules/.bin/prettier --write --single-quote {}",
    "prewebpack": "pnpm clean",
    "precommit": "lint-staged",
    "clean": "rm -rf ./build && mkdir ./build",
    "lint": "eslint ./app/**/*.js"
  },
  "build": {
    "appId": "your.id",
    "mac": {
      "category": "your.app.category.type"
    },
    "files": [
      "main.js",
      {
        "from": "build",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@pixi/filter-multi-color-replace": "^5.1.1",
    "@pixi/sound": "^6.0.1",
    "@volgakurvar/pixi-filter-multi-color-replace": "^1.0.0",
    "pixi-filters": "^6.1.4",
    "pixi.js": "^8.13.2",
    "popmotion": "^11.0.5",
    "redux": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.11.0",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "file-loader": "^6.2.0",
    "gh-pages": "^6.1.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "3.2.5",
    "raw-loader": "^4.0.2",
    "rimraf": "^5.0.10",
    "style-loader": "^3.3.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "plugins": [
    "prettier"
  ],
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write --single-quote",
      "git add"
    ]
  }
}
